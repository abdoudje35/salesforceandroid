        <activity android:name=".salesforce.viewer.DocumentViewer" android:label="@string/document_viewer"></activity>
        <activity android:name=".salesforce.sobject.AccountList" android:label="@string/acc_list"></activity>
        <!--  <activity android:name=".sobject.ContactList" android:label="@string/con_list"></activity>  -->
        <!--  <activity android:name=".sobject.OpportunityList" android:label="@string/opp_list"></activity>  -->
