            android:layout_height="wrap_content"			        
            android:text=""/>

        <TextView
            android:id="@+id/item_value"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text=""/>
 -->
    </LinearLayout>
</LinearLayout>
