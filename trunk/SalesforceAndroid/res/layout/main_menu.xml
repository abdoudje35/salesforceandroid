<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#FFf0f8ff">

	<!-- Image View   -->
	<!-- 
	<ImageView android:layout_width="173px" android:layout_height="51px"
		android:paddingLeft="10px" android:layout_marginTop="10px"
		android:paddingBottom="2px" android:src="@drawable/salesforce" />
  -->
 
	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:paddingTop="14dip"
		android:paddingLeft="24dip" android:paddingBottom="12dip"
		>
		<TextView android:id="@+id/list_top"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="24sp"
			android:text="" android:paddingTop="2dip" android:paddingBottom="12dip"/>
		<TextView android:id="@+id/dummy"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:paddingBottom="6dip"
			android:layout_marginTop="4dip" android:text="" />
	</LinearLayout>


	<LinearLayout android:id="@+id/layout"
		android:orientation="vertical" android:paddingLeft="8dip"
		android:paddingTop="2dip" android:paddingBottom="12dip"
		android:layout_width="fill_parent" android:paddingRight="8dip"
		android:layout_height="wrap_content">
		
		<ListView android:id="@id/android:list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:textSize="18px"
			android:textColor="#BBFFFFFF"
			android:paddingBottom="7px" android:paddingTop="7px"
			android:paddingLeft="5px" android:paddingRight="5px"
			android:layout_marginBottom="6px" android:layout_marginTop="6px"
			/>
			
		<TextView android:id="@id/android:empty"
			android:layout_width="fill_parent" android:layout_marginLeft="18px"
			android:layout_height="wrap_content" android:textColor="#FF708091" />
	</LinearLayout>

</LinearLayout>
